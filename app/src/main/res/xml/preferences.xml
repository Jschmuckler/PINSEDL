<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:seekbarunit="http://schemas.android.com/apk/res-auto">

    <EditTextPreference
        android:key="THRESHOLD"
        android:title="Threshold"
        android:summary="Enter the threshold to keep the voltage below\nFunctions according to app units"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:defaultValue="1.5"
        />

    <EditTextPreference
        android:key="SMOOTHING"
        android:title="Smoothing"
        android:summary="Enter the number of values to be averaged to determine if the threshold has been passed"
        android:inputType="number"
        android:maxLength="2"
        android:defaultValue="10"
        />

    <EditTextPreference
        android:key="THICKNESS"
        android:title="Thickness"
        android:summary="Enter the thickness to make your lines"
        android:inputType="number"
        android:maxLength="2"
        android:defaultValue="10"
        />

    <ListPreference
        android:key="UNIT"
        android:title ="Units"
        android:summary="Select the units for the upcoming data\nClears previous data"
        android:entries="@array/UnitNames"
        android:entryValues="@array/UnitConversions"
        android:defaultValue="1"/>


</PreferenceScreen>
